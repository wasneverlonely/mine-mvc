<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--没有标题-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--页面背景-->
        <item name="android:windowBackground">@color/cl_page_bg</item>
        <!--禁止弹出输入法-->
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
        <!--设置成为竖屏-->
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="BaseNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="picture.white.style" parent="BaseNoActionBarTheme">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/cl_white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/cl_white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@mipmap/ic_back_arrow</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@mipmap/ic_orange_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@mipmap/ic_orange_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/cl_black</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/cl_black</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/cl_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/picture_list_sina_text_color</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/picture_list_sina_text_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/picture_num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/cl_white</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/cl_black</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/picture_list_sina_text_color
        </item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/picture_color_fa</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@mipmap/ic_back_arrow</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/cl_white</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/cl_white</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/cl_black</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>
    </style>

</resources>